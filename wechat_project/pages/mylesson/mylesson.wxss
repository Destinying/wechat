.my_lesson_layout{
  flex-direction: row;
  display: flex;
  align-items: center;
  font-size: 25rpx;
  background: #fff;
  margin: 10rpx 0;
  padding: 10rpx 10rpx 0rpx 10rpx;
}
.my_lesson_class{

}
.purchase_lesson{
  flex-direction: row;
  display: flex;
  align-items: center;
}
.purchase_lesson text{
   margin-left: 15rpx;
   color: #b90611
}
.live_lesson text{
  margin-left: 15rpx;
  color: #b90611
}
.live_lesson{
  flex-direction: row;
  display: flex;
  align-items: center;
}
.my_lesson_image{
  width: 300rpx;
}
.my_lesson_font{
  width: 94%;
  margin: 0 3%;
}
.my_lesson_font view:nth-child(1){
  font-size: 28rpx;
  font-weight: bold
}
.my_lesson_font view:nth-child(2){
  font-size: 25rpx;
  color: #898989;
  margin: 15rpx 0;
}
.my_lesson_font view:nth-child(3){
  font-size: 25rpx;
  color: #898989
}