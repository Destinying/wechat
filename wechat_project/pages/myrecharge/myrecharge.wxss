.not_out_time{
  width: 98%;
  margin: 0 auto;
}
.not_add_time_01{
  background: #fff;
  width: 100%;
  margin: 10rpx 0;
  flex-direction: row;
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  justify-content: space-between
}
.pay_status{
  background: #dcdddd;
  font-size: 25rpx;
  margin-right: 15rpx;
  padding: 30rpx;
}
.not_pay_status{
  color: #bb0611
}
.s_num{
  font-size: 28rpx;
}
.s_name{
  font-size: 25rpx;
  color: #898989;
  margin: 5rpx 0
}
.s_date{
  font-size: 25rpx;
  color: #898989;
}
.left_lay{
  margin-left: 15rpx
}